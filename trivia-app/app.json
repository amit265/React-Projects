{
  "expo": {
    "name": "Trivia Quest AI",
    "slug": "trivia-app",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "com.coderespite.triviaquestai",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.coderespite.triviaquestai",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#132F94"
      },
      "package": "com.coderespite.triviaquestai",
      "versionCode": 5
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-7433519007687449~9817337772",
          "iosAppId": ""
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35, // âœ… Updated to 35
  "targetSdkVersion": 35, // âœ… Updated to 35
            "enableProguardInReleaseBuilds": true, // ðŸ”¹ Enable ProGuard to reduce size
            "enableShrinkResourcesInReleaseBuilds": true, // ðŸ”¹ Shrink unused resources
            "enableHermes": true // âœ… Enable Hermes
          }
        }
      ]
    ],
    "owner": "mindcraftlearning",
    "extra": {
      "firebaseApiKey": "@env:EXPO_PUBLIC_FIREBASE_API_KEY",
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "0949a148-0b9d-484d-ac6b-d2b78f81aebb"
      }
    },
    "splash": {
      "image": "./assets/images/splash.png",
      "backgroundColor": "#132F94",
      "resizeMode": "contain"
    },
    "updates": {
      "enabled": true
    },
    "runtimeVersion": {
      "policy": "nativeVersion"
    }
  }
}
